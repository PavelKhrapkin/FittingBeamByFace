<Window x:Class="FittingBeamByFace.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FittingBeamByFace"
        mc:Ignorable="d"
        Title="MainWindow" Height="250" Width="500">
    <Grid Margin="0,0,-8,0">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="160"/>
            <ColumnDefinition Width="Auto"/>

            <!-- Chris Keyack Session 06 -->
        </Grid.ColumnDefinitions>
        <Label Grid.Column="0"
            Content="Chris Keyack Session 06&#xD;&#xA;Pick Points and Set Workplane&#xD;&#xA;"
               HorizontalAlignment="Left" Height="40"  VerticalAlignment="Top" 
               Background="Yellow"/>
        <Border Grid.Column="0"
            BorderBrush="Black" BorderThickness="2" HorizontalAlignment="Left" Height="40"  VerticalAlignment="Top" Width="170"/>
        <Button Grid.Column="0" Content="Pick 2 Points" FontWeight="Bold" Background="LightYellow"
                HorizontalAlignment="Left" Height="27" Margin="20,60,0,0"
                VerticalAlignment="Top" Width="127" Click="Button_Beam_Click"/>
        <Button Grid.Column="0" Content="Pick Part" FontWeight="Bold" Background="Yellow"
                HorizontalAlignment="Left" Height="27" Margin="20,100,0,0"
                VerticalAlignment="Top" Width="127" Click="Button_Column_Click"/>
        <Button Grid.Column="0" Content="Global" FontWeight="Bold" Background="LightGreen"
                HorizontalAlignment="Left" Height="27" Margin="20,140,0,0"
                VerticalAlignment="Top" Width="127" Click="Button_Polibeam_Click"/>

        <!-- Chris Keyack Session 07 -->
        <Label
            Content="Chris Keyack Session 07&#xD;&#xA;Write Beam Data to Text File&#xD;&#xA;"
               HorizontalAlignment="Left" Height="40" VerticalAlignment="Top"
               Background="Bisque" Grid.ColumnSpan="3" Margin="175,2,0,0"/>
        <Border Grid.Column="1" 
            BorderBrush="Black" BorderThickness="2" HorizontalAlignment="Left" Height="40"  VerticalAlignment="Top"/>
        <Button Grid.Column="1" Content="Beam" FontWeight="Bold" Background="LightYellow"
                HorizontalAlignment="Left" Height="27" Margin="5,60,0,0"
                VerticalAlignment="Top" Width="40" Click="Button_Beam_Click"/>
        <TextBox Name="ProfileText" Grid.Column="1" HorizontalAlignment="Left" Height="27" Margin="60,60,0,0" TextWrapping="Wrap" 
                 VerticalAlignment="Top" Width="90"
                 FontSize="14" FontWeight="Bold"
                 KeyDown="InputProfile"/>
        <Button Grid.Column="1" Content="Column" FontWeight="Bold" Background="Yellow"
                HorizontalAlignment="Left" Height="27" Margin="10,100,0,0"
                VerticalAlignment="Top" Width="127" Click="Button_Column_Click"/>
        <Button Grid.Column="1" Content="Polibeam" FontWeight="Bold" Background="LightGreen"
                HorizontalAlignment="Left" Height="27" Margin="10,140,0,0"
                VerticalAlignment="Top" Width="127" Click="Button_Polibeam_Click"/>

        <!-- Сеня Бусин -->
        <Label Grid.Column="2"
            Content="       Сеня Бусин"
               HorizontalAlignment="Left" Height="40" VerticalAlignment="Top" Width="120"
               Background="Khaki"/>
        <Border Grid.Column="2"
            BorderBrush="Black" BorderThickness="2" HorizontalAlignment="Left" Height="40"  VerticalAlignment="Top"/>
        <Button Grid.Column="2" Content="Go"
                HorizontalAlignment="Left" Height="40" 
                VerticalAlignment="Top" Width="75" Background="Yellow" Margin="20,50"
                FontSize="16"
                Click="Button_Go_Click" RenderTransformOrigin="0.54,-0.7"/>
        <Button Grid.Column="2" Content="Координаты" 
                HorizontalAlignment="Left" Height="40" Margin="0,110,0,0" 
                VerticalAlignment="Top" Width="121"
                Background="LightGreen" FontSize="14"
                Click="Button_Coordinate_Click"/>
        <Button Grid.Column="2" Content="ShowReper" 
                HorizontalAlignment="Left" Height="40" Margin="20,160,0,0" 
                VerticalAlignment="Top" Width="75"
                Background="Aquamarine" FontSize="14"
                Click="Button_DrawReper_Click"/>
    </Grid>
</Window>
