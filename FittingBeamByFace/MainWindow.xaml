<Window x:Class="FittingBeamByFace.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FittingBeamByFace"
        mc:Ignorable="d"
        Title="MainWindow" Height="250" Width="200">
    <Grid>
        <Button Content="Go"
                HorizontalAlignment="Left" Height="40" Margin="60,20,0,0"
                VerticalAlignment="Top" Width="75" Background="Yellow"
                FontSize="16"
                Click="Button_Go_Click" RenderTransformOrigin="0.54,-0.7"/>
        <Button Content="Example" 
                HorizontalAlignment="Left" Height="40" Margin="60,80,0,0" 
                VerticalAlignment="Top" Width="75"
                Background="LightGreen" FontSize="14"
                Click="Button_DrawText_Click"/>
        <Button Content="DrawText" 
                HorizontalAlignment="Left" Height="40" Margin="60,140,0,0" 
                VerticalAlignment="Top" Width="75"
                Background="Aquamarine" FontSize="14"
                Click="Button_DrawText_Click"/>

    </Grid>
</Window>
