<Window x:Class="FittingBeamByFace.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FittingBeamByFace"
        mc:Ignorable="d"
        Title="MainWindow" Height="250" Width="500" BorderBrush="{DynamicResource {x:Static SystemColors.ActiveCaptionTextBrushKey}}">
    <Grid Margin="0,0,-312,0">
        <Label Content="Chris Keyack Session 06&#xD;&#xA;Pick Points and Set Workplane&#xD;&#xA;"
               HorizontalAlignment="Left" Height="40" Margin="10,5,0,0" VerticalAlignment="Top" Width="170"
               Background="Yellow"/>
        <Border BorderBrush="Black" BorderThickness="2" HorizontalAlignment="Left" Height="40" Margin="10,5,0,0" VerticalAlignment="Top" Width="170"/>
        <Button Content="Pick 2 Points" FontWeight="Bold" Background="LightYellow"
                HorizontalAlignment="Left" Height="27" Margin="34,60,0,0"
                VerticalAlignment="Top" Width="127" Click="Button_Pick2Points_Click"/>
        <Button Content="Pick Part" FontWeight="Bold" Background="Yellow"
                HorizontalAlignment="Left" Height="27" Margin="34,100,0,0"
                VerticalAlignment="Top" Width="127" Click="Button_PickPart_Click"/>
        <Button Content="Global" FontWeight="Bold" Background="LightGreen"
                HorizontalAlignment="Left" Height="27" Margin="34,140,0,0"
                VerticalAlignment="Top" Width="127" Click="Button_Global_Click"/>
     
        <Button Content="Go"
                HorizontalAlignment="Left" Height="40" Margin="260,60,0,0"
                VerticalAlignment="Top" Width="75" Background="Yellow"
                FontSize="16"
                Click="Button_Go_Click" RenderTransformOrigin="0.54,-0.7"/>
        <Button Content="Координаты" 
                HorizontalAlignment="Left" Height="40" Margin="238,110,0,0" 
                VerticalAlignment="Top" Width="121"
                Background="LightGreen" FontSize="14"
                Click="Button_Coordinate_Click"/>
        <Button Content="ShowReper" 
                HorizontalAlignment="Left" Height="40" Margin="260,160,0,0" 
                VerticalAlignment="Top" Width="75"
                Background="Aquamarine" FontSize="14"
                Click="Button_DrawReper_Click"/>

    </Grid>
</Window>
